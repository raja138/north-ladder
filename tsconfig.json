{
  "compilerOptions": {
    "outDir": "./dist",  // Output folder for compiled files
    "rootDir": "./src",  // Root directory for source files
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
